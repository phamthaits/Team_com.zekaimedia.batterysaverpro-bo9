<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp">

                <com.facebook.ads.MediaView
                    android:id="@+id/native_ad_icon"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:layout_alignTop="@+id/text_fb"
                    android:layout_alignBottom="@+id/text_fb"
                    android:clickable="false" />

                <LinearLayout
                    android:id="@+id/text_fb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ad_choices_container"
                    android:layout_toRightOf="@+id/native_ad_icon"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dip">

                    <TextView
                        android:id="@+id/native_ad_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:lines="1"
                        android:fontFamily="@font/barlowcondensed_medium"
                        android:textColor="@color/headline_color"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/native_ad_sponsored_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Sponsored"
                            android:textColor="@color/advertiser_color"
                            android:fontFamily="@font/barlowcondensed_medium"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/native_ad_social_context"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:clickable="false"
                            android:ellipsize="end"
                            android:textColor="@color/body_color"
                            android:fontFamily="@font/barlowcondensed_regular"
                            android:textSize="12.0sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ad_choices_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/text_fb"
                    android:layout_alignBottom="@+id/text_fb"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip">
                    <TextView
                        android:id="@+id/native_ad_body"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:textColor="@color/body_color"
                        android:fontFamily="@font/barlowcondensed_regular"
                        android:textSize="12.0sp" />
            </RelativeLayout>

            <com.facebook.ads.MediaView
                android:id="@+id/native_ad_media"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip" />

            <Button
                android:id="@+id/native_ad_call_to_action"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="5dip"
                android:layout_marginRight="30dip"
                android:layout_marginBottom="10dip"
                android:background="@drawable/ads_bg_lib"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="22sp"
                android:fontFamily="@font/barlowcondensed_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            style="@style/AppTheme.Ads"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</LinearLayout>