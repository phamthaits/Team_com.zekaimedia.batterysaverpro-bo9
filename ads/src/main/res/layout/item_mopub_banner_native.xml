<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_outer_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/native_privacy_information_icon_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:contentDescription="Privacy Information Icon image"
            android:gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="@dimen/_78sdp"
            android:layout_height="@dimen/_78sdp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_icon_ads"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/native_icon_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_20sdp"
                android:background="@null"
                android:contentDescription="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/linear_top"
            android:layout_alignBottom="@+id/linear_top"
            android:layout_toEndOf="@+id/linear_top"
            android:background="@drawable/bg_icon_ads_right"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dip">

                <TextView
                    android:id="@+id/native_title"
                    style="@style/listContentHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/native_text"
                    style="@style/descriptionListContentHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/native_title"
                    android:ellipsize="end" />

                <Button
                    android:id="@+id/native_cta"
                    style="@style/listContentHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/transparent"
                    android:gravity="right|bottom"
                    android:text="Test" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/native_sponsored_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/body_color"
                    android:textSize="12.0sp" />

                <ImageView
                    android:id="@+id/native_main_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:scaleType="centerCrop" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        style="@style/AppTheme.Ads.Banner.Native"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
