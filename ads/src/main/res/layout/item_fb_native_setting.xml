<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_unit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ad_choices_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal" />

            <com.facebook.ads.MediaView
                android:id="@+id/native_ad_media"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:layout_gravity="center_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:padding="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/image_native_fb"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="fill_parent"
                    android:layout_alignTop="@+id/text_fb"
                    android:layout_alignBottom="@+id/text_fb"
                    android:background="@drawable/ic_test_ad">

                    <com.facebook.ads.MediaView
                        android:id="@+id/native_ad_icon"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/text_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image_native_fb"
                    android:clickable="false"
                    android:paddingLeft="@dimen/_4sdp">

                    <RelativeLayout
                        android:id="@+id/right_native_fb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/button_native_fb">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/native_ad_title"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:fontFamily="@font/barlowcondensed_medium"
                                android:lines="1"
                                android:textColor="@color/headline_color"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/native_ad_sponsored_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/barlowcondensed_medium"
                                    android:lines="1"
                                    android:text="Sponsored"
                                    android:textColor="@color/advertiser_color"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/native_ad_social_context"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:clickable="false"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/barlowcondensed_regular"
                                    android:lines="1"
                                    android:textColor="@color/body_color"
                                    android:textSize="12.0sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/native_ad_body"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:fontFamily="@font/barlowcondensed_regular"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:textColor="@color/body_color"
                                android:textSize="12.0sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button_native_fb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/right_native_fb"
                        android:layout_alignBottom="@+id/right_native_fb"
                        android:layout_alignParentRight="true">

                        <Button
                            android:id="@+id/native_ad_call_to_action"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_margin="@dimen/_3sdp"
                            android:background="@drawable/ads_bg_lib"
                            android:fontFamily="@font/barlowcondensed_medium"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:textColor="@color/color_white"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

        <TextView
            style="@style/AppTheme.Ads"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</LinearLayout>