<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_unit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/banner_native_fb_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_icon_ads"
            android:gravity="center"
            android:orientation="vertical">
            <com.facebook.ads.MediaView
                android:id="@+id/native_ad_icon"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_margin="@dimen/_20sdp"
                android:clickable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/banner_native_fb_image"
            android:layout_alignBottom="@+id/banner_native_fb_image"
            android:layout_toEndOf="@+id/banner_native_fb_image"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dip">

                <TextView
                    android:id="@+id/native_ad_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:fontFamily="@font/barlowcondensed_medium"
                    android:lines="1"
                    android:textColor="#D18440"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/native_ad_body"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:layout_below="@+id/native_ad_title"
                    android:fontFamily="@font/barlowcondensed_regular"
                    android:textColor="@color/body_color"
                    android:textSize="@dimen/textsize_compo_ram_cpu_des" />

                <Button
                    android:id="@+id/native_ad_call_to_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/barlowcondensed_medium"
                    android:gravity="right|bottom"
                    android:text="Test"
                    android:textAllCaps="false"
                    android:textColor="#D18440"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/ad_choices_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />
                    <TextView
                        android:id="@+id/native_ad_sponsored_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Sponsored"
                        android:textColor="@color/advertiser_color"
                        android:fontFamily="@font/barlowcondensed_medium"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/native_ad_social_context"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:textColor="@color/body_color"
                        android:fontFamily="@font/barlowcondensed_regular"
                        android:textSize="12.0sp" />

                    <com.facebook.ads.MediaView
                        android:id="@+id/native_ad_media"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dip" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            style="@style/AppTheme.Ads.Banner.Native"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>
</LinearLayout>