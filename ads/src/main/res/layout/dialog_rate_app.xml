        <!--            android:paddingTop="2dip"-->
        <!--            android:paddingRight="2dip"-->
        <!--            android:paddingBottom="2dip"-->
        <!--            android:visibility="gone" />-->
        <include
            android:id="@+id/native_ads_control_holder"
            layout="@layout/control_native_ads"
