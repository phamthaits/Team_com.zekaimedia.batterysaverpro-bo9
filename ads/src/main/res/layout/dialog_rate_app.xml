    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="#1F1F1F" />

    <RelativeLayout
        android:id="@+id/rtl_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp">

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rd_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/googlesans_light"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="5dip"
        android:text="@string/rate_msg"
        android:textColor="@color/text_color_dialog"
        android:textSize="@dimen/text_details" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/bg_bt_rate_app"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/btn_late"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button"

            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="10dp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="10dp"
            android:text="@string/remind_later"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dialog"
            android:textSize="@dimen/text_details" />
    </LinearLayout>
</LinearLayout>