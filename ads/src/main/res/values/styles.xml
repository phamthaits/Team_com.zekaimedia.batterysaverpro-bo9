<resources>

    <style name="AdsAppTheme" parent="Theme.AppCompat.Light" />

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="AppTheme.Ads" parent="@style/AdsAppTheme">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">13.0px</item>
        <item name="android:minHeight">13.0px</item>
        <item name="android:text">AD</item>
    </style>

    <style name="AppTheme.Ads.Banner.Native" parent="@style/AdsAppTheme">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/banner_native_ads_icon</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">13.0px</item>
        <item name="android:minHeight">13.0px</item>
        <item name="android:text">AD</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_ads</item>
        <item name="android:windowExitAnimation">@anim/fade_out_ads</item>
    </style>

    <style name="listContentHome">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="imageListContentHome">
        <item name="android:layout_margin">@dimen/_15sdp</item>
    </style>
    <style name="descriptionListContentHome">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="headlineTextAds">
        <item name="android:fontFamily">@font/googlesans_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/headline_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="descriptionTextAds">
        <item name="android:fontFamily">@font/googlesans_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="bodyTextAds">
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/button_ads</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="buttonSettingAds">
        <item name="android:background">@drawable/ads_bg_lib</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
</resources>
