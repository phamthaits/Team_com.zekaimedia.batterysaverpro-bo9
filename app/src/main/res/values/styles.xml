<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar stuff. -->
        <item name="android:colorControlNormal">@color/primary_text</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
        <item name="circularProgressBarStyle">@style/CircularProgressBarLight</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:listDivider">@color/dark_grayish_blue</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/secondary_color</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/secondary_color</item>
        <item name="android:background">@color/secondary_color</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:listPreferredItemHeight">@dimen/_10sdp</item>
    </style>

    <style name="textHeaderActivity">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CircularProgressBarLight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="holo_progress">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">#aaa</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">false</item>
    </style>

    <style name="AppTheme.WindowTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_AppCompat_Light_NoActionBar_FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolbarThemeGreen" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textsizetoolbar">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="Ripple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="tvTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="rowSwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="rowdetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="rowAlonetvt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="imageStyle">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="swStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">false</item>
    </style>

    //device
    //op

    <style name="ItemFrameTextRecord">
        <item name="android:layout_marginBottom">@dimen/_24sdp</item>
    </style>

    <style name="swguide">
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="DialogActivity" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
