<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded">

    <RelativeLayout
        android:id="@+id/lrBoost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_icon_phone_boost"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick">

        <RelativeLayout
            android:id="@+id/icon_boost"
            android:layout_width="@dimen/_78sdp"
            android:layout_height="@dimen/_78sdp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTemperaturePin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_20sdp"
                android:src="@drawable/ic_rocket_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_boost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/icon_boost"
            android:layout_alignBottom="@+id/icon_boost"
            android:layout_toEndOf="@+id/icon_boost">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tvBoost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlowcondensed_medium"
                    android:gravity="left"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/phone_boost_nav"
                    android:textColor="@color/text_phone_boost"
                    android:textSize="@dimen/text_size_title" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/tvBoost"
                    android:fontFamily="@font/barlowcondensed_regular"
                    android:gravity="left"
                    android:text="@string/boost_description"
                    android:textColor="@color/description"
                    android:textSize="@dimen/textsize_compo_ram_cpu_des"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvFullCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/barlowcondensed_medium"
                    android:padding="0dp"
                    android:text="@string/op_boost"
                    android:textColor="@color/description"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>