<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/notification_background"
    android:gravity="center">

    <FrameLayout
        style="@style/button_bg_noti"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/notifiation_icon"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="center_vertical"
            android:layout_margin="8.0dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_splash" />
<!--        android:src="@mipmap/ic_launcher" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="64.0dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/phenomena_regular"
                android:text="Time left"
                android:textColor="@color/description"
                android:textSize="12.0dip"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/view_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/phenomena_regular"
                    android:text="00"
                    android:textColor="@color/trash_cleanner"
                    android:textSize="@dimen/text_size_hour" />

                <TextView
                    android:id="@+id/tv_time_h_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="2.0dip"
                    android:fontFamily="@font/phenomena_regular"
                    android:text="h"
                    android:textColor="@color/description"
                    android:textSize="@dimen/arc_suffix_text_size" />

                <TextView
                    android:id="@+id/tvMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="2.0dip"
                    android:fontFamily="@font/phenomena_regular"
                    android:text="00"
                    android:textColor="@color/trash_cleanner"
                    android:textSize="@dimen/text_size_hour" />

                <TextView
                    android:id="@+id/tv_time_m_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="2.0dip"
                    android:fontFamily="@font/phenomena_regular"
                    android:text="m"
                    android:textColor="@color/description"
                    android:textSize="@dimen/arc_suffix_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvFullCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/phenomena_regular"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="18dip"
                android:textStyle="normal"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="62.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_battery"
                    android:layout_width="18.0dip"
                    android:layout_height="18.0dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_battery_notification_normal"
                    app:tint="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/marging_left_ne"
                    android:text="45%"
                    android:textColor="@color/description"
                    android:textSize="13.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5.0dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_temp"
                    android:layout_width="18.0dip"
                    android:layout_height="18.0dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_temperature_normal"
                    app:tint="@color/purple" />

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/marging_left_ne"
                    android:text="35.5*C"
                    android:textColor="@color/description"
                    android:textSize="13.0dip" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="1.0px"
            android:layout_height="56.0dip"
            android:layout_gravity="center|end"
            android:layout_marginEnd="58.0dip"
            android:background="@color/description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_clean"
                android:layout_width="38.0dip"
                android:layout_height="38.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10.0dip"
                android:layout_marginEnd="10.0dip"
                android:padding="5dip"
                android:src="@drawable/ic_memory_boost"
                />
<!--            app:tint="@color/more_boost"-->
        </LinearLayout>
    </FrameLayout>
</FrameLayout>