<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:titleTextColor="@color/text_color"
            app:subtitleTextColor="@color/text_color"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_collapseMode="pin"

            android:theme="@style/ToolbarThemeGreen"
            app:titleTextAppearance="@style/textsizetoolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_rounded"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lrAutoRun"
            android:clickable="false"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            style="@style/Ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEnable"
                    android:textAllCaps="true"
                    style="@style/rowSwitchStyle"
                    android:text="@string/auto_disable" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swAutoRun"
                style="@style/swStyle" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lrWifi"
            android:clickable="false"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            style="@style/Ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/tvWifi"
                    style="@style/rowSwitchStyle"
                    android:text="@string/wifi" />
                <TextView
                    android:id="@+id/tvWifiDes"
                    style="@style/rowdetails"
                    android:text="@string/off_status"/>

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swWifi"
                style="@style/swStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lrAutoBrightness"
            android:clickable="false"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            style="@style/Ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/tvBrightness"
                    style="@style/rowSwitchStyle"
                    android:text="@string/screen_brightness" />
                <TextView
                    android:id="@+id/tvBrightnessDes"
                    style="@style/rowdetails"
                    android:text="@string/auto"/>

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swAutoBrightness"
                style="@style/swStyle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lrBluetooth"
            android:clickable="false"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            style="@style/Ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBluetooth"

                    style="@style/rowSwitchStyle"
                    android:text="@string/bluetooth" />
                <TextView
                    android:id="@+id/tvBluetoothDes"
                    style="@style/rowdetails"
                    android:text="@string/off_status"/>

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swBluetooth"
                style="@style/swStyle" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/lrAutoSync"
            android:clickable="false"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            style="@style/Ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSync"

                    style="@style/rowSwitchStyle"
                    android:text="@string/auto_sync" />
                <TextView
                    android:id="@+id/tvSyncDes"
                    style="@style/rowdetails"
                    android:text="@string/auto"/>

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swAutoSync"
                style="@style/swStyle" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>