<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
            android:theme="@style/ToolbarThemeGreen"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:subtitleTextColor="@color/primary_text"
            app:titleTextAppearance="@style/textsizetoolbar"
            app:titleTextColor="@color/primary_text" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lrAutoRun"
                style="@style/Ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEnable"
                        style="@style/rowSwitchStyle"
                        android:text="@string/auto_disable"
                        android:textAllCaps="true" />

                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swAutoRun"
                    style="@style/swStyle"
                    android:layout_marginRight="@dimen/_16sdp"
                    app:track="@drawable/track" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_24sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingVertical="@dimen/_16sdp"
                android:background="@drawable/bg_rounded"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lrWifi"
                    style="@style/Ripple"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:clickable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/tvWifi"
                            style="@style/rowSwitchStyle"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:text="@string/wifi" />

                        <TextView
                            android:id="@+id/tvWifiDes"
                            style="@style/rowdetails"
                            android:text="@string/off_status" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swWifi"
                        style="@style/swStyle"
                        app:track="@drawable/track" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lrAutoBrightness"
                    style="@style/Ripple"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:id="@+id/tvBrightness"
                            style="@style/rowSwitchStyle"
                            android:text="@string/screen_brightness" />

                        <TextView
                            android:id="@+id/tvBrightnessDes"
                            style="@style/rowdetails"
                            android:text="@string/auto" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swAutoBrightness"
                        style="@style/swStyle"
                        app:track="@drawable/track" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lrBluetooth"
                    android:layout_marginBottom="@dimen/_20sdp"
                    style="@style/Ripple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBluetooth"
                            android:layout_marginBottom="@dimen/_8sdp"
                            style="@style/rowSwitchStyle"
                            android:text="@string/bluetooth" />

                        <TextView
                            android:id="@+id/tvBluetoothDes"
                            style="@style/rowdetails"
                            android:text="@string/off_status" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swBluetooth"
                        style="@style/swStyle"
                        app:track="@drawable/track" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lrAutoSync"
                    style="@style/Ripple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSync"
                            android:layout_marginBottom="@dimen/_8sdp"
                            style="@style/rowSwitchStyle"
                            android:text="@string/auto_sync" />

                        <TextView
                            android:id="@+id/tvSyncDes"
                            style="@style/rowdetails"
                            android:text="@string/auto" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/swAutoSync"
                        style="@style/swStyle"
                        app:track="@drawable/track" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/native_ads_control_holder"
                layout="@layout/control_native_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_24sdp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>