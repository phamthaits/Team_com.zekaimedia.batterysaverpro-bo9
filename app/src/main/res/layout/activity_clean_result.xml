<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_battery_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true"
        android:gravity="center|left">

        <LinearLayout
            android:id="@+id/lr_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_16sdp">

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_navigate_before_white_48dp"
                    app:tint="@color/primary_text" />
            </FrameLayout>

            <TextView
                android:id="@+id/activity_charge_tv_title_1"
                style="@style/textHeaderActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_52sdp"
                android:gravity="center"
                android:text="@string/junk_clean_nav" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fmResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:background="@color/windowBackground">
        <!-- android:visibility="gone" -> Cleaned-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_88sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:background="@color/progress_background"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_optimized_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:text="@string/op_clean"
                        android:textAllCaps="true"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:text="Subtitle here"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_10sdp" />

                <include
                    android:id="@+id/native_ads_control_holder"
                    layout="@layout/control_native_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:orientation="horizontal">
                    <!--Phone Boost-->
                    <include
                        layout="@layout/phone_boost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_weight="1" />

                    <!--Phone Cooler-->
                    <include
                        layout="@layout/phone_cooler"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:orientation="horizontal">
                    <!--Charge History-->
                    <include
                        layout="@layout/charge_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_weight="1" />

                    <!--App Manager-->
                    <include
                        layout="@layout/app_manager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:orientation="horizontal">
                    <!--Settings-->
                    <include
                        layout="@layout/settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_weight="1" />

                    <!--Remove Ads-->
                    <include
                        android:id="@+id/remove_ads"
                        layout="@layout/remove_ads"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!--Scanning Trash Cleaner-->
    <RelativeLayout
        android:id="@+id/rlScanning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/imgOutCircle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_416sdp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.zekaimedia.batterysaverpro.view.HoloCircularProgressBar
                    android:id="@+id/ivDoneHoloCirular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    app:holo_progress="0"
                    app:marker_progress="0"
                    app:marker_visible="false"
                    app:progress_background_color="@color/more_clean_bg"
                    app:progress_color="@color/more_clean"
                    app:stroke_width="4dp" />

                <ImageView
                    android:id="@+id/img_rotate_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_icon_progress_cleaner"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/clean_done_iv_rocket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_45sdp"
                    android:src="@drawable/ic_clean_trash"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/clean_done_iv_tick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/complete_bg_clean"
                    android:padding="@dimen/_30sdp"
                    android:src="@drawable/ic_complete_tick"
                    android:visibility="invisible" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgOutCircle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOptimize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/cleaning_junk"
                android:textAllCaps="true"
                android:textColor="@color/title_dark"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
