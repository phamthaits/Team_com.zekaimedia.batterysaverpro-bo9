<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/activity_battery_actionbar"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:id="@+id/lr_back"
            android:paddingEnd="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick">
            <FrameLayout
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8.0dip"
                    android:src="@drawable/ic_navigate_before_white_48dp" />
            </FrameLayout>
            <TextView
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_second"
                android:gravity="center_vertical"
                android:id="@+id/activity_charge_tv_title_1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/title_activity_fast_charge"
                android:textAllCaps="true"
                android:fontFamily="sans" />

        </LinearLayout>
        <ImageView
            android:onClick="onClick"
            android:id="@+id/ivSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_setting_fast_charge"
            />
    </RelativeLayout>

    <FrameLayout

        android:visibility="gone"
        android:id="@+id/fmResult"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animateLayoutChanges="true">

    <ScrollView
        android:background="@color/main_dark_color"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:background="#ffffffff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/img_done"
                    android:layout_width="@dimen/img_mark_size"
                    android:layout_height="@dimen/img_mark_size"
                    android:layout_centerHorizontal="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/star_charge" />

                <TextView
                    android:textSize="@dimen/optimize_result_size"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_optimized_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:text="@string/fast_charger_boosted"

                    android:layout_below="@+id/img_done"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dip"/>
            </RelativeLayout>


            <View
                android:background="@color/divider"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">



                    <include
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_ads_control">
                    </include>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvFastCharge"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_marginRight="8.0dip"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8.0dip"
                        app:cardElevation="0.0dip">

                        <include
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            layout="@layout/layout_enable_charge"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvBoost"
                        android:layout_width="fill_parent"
                        android:layout_height="120.0dip"
                        android:layout_marginStart="8.0dip"
                        android:layout_marginTop="8.0dip"
                        android:layout_marginEnd="8.0dip"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8.0dip"
                        app:cardElevation="0.0dip"

                        >
                        <RelativeLayout
                            android:id="@+id/rlBoost"
                            android:onClick="onClick"
                            android:background="@drawable/card_selector"
                            android:clickable="true"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <FrameLayout
                                android:id="@+id/fl_boost"
                                android:background="@drawable/more_clean_bg"
                                android:layout_width="72.0dip"
                                android:layout_height="fill_parent">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:id="@+id/ivBoost"
                                    android:layout_width="32.0dip"
                                    android:layout_height="32.0dip"
                                    android:src="@drawable/ic_rocket_white" />
                            </FrameLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:paddingStart="16.0dip"
                                android:paddingEnd="8.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toEndOf="@+id/fl_boost">
                                <TextView
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/optimize_result_size"
                                    android:textColor="@color/text_color"
                                    android:id="@+id/tvBoost1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8.0dip"
                                    android:text="@string/ram_boost_title"
                                    android:textAllCaps="true" />
                                <TextView
                                    android:textSize="@dimen/text_details_optimize"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/grey_500"
                                    android:id="@+id/tvBoost2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8.0dip"
                                    android:text="@string/sm_ram_detail"
                                    android:layout_above="@+id/tvBoost3"
                                    android:layout_below="@+id/tvBoost1" />
                                <TextView
                                    android:textSize="@dimen/text_details_optimize"
                                    android:fontFamily="@font/roboto_regular"
                                    android:typeface="sans"
                                    android:textColor="@color/more_boost"
                                    android:gravity="center"
                                    android:id="@+id/tvBoost3"
                                    android:background="@drawable/button_dialog_selector"
                                    android:paddingStart="8.0dip"
                                    android:paddingEnd="8.0dip"
                                    android:clickable="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="36.0dip"
                                    android:layout_marginBottom="8.0dip"
                                    android:minWidth="64.0dip"
                                    android:text="@string/op_boost"
                                    android:layout_gravity="end"
                                    android:textAllCaps="true" />
                            </LinearLayout>
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvClean"
                        android:layout_width="fill_parent"
                        android:layout_height="120.0dip"
                        android:layout_marginStart="8.0dip"
                        android:layout_marginTop="8.0dip"
                        android:layout_marginEnd="8.0dip"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8.0dip"
                        app:cardElevation="0.0dip">
                        <RelativeLayout
                            android:id="@+id/rlClean"
                            android:onClick="onClick"
                            android:background="@drawable/card_selector"
                            android:clickable="true"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <FrameLayout
                                android:id="@+id/fm_header_clean"
                                android:background="@drawable/more_boost_bg"
                                android:layout_width="72.0dip"
                                android:layout_height="fill_parent">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="32.0dip"
                                    android:layout_height="32.0dip"
                                    android:src="@drawable/ic_clean_white" />
                            </FrameLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:paddingStart="16.0dip"
                                android:paddingEnd="8.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toEndOf="@+id/fm_header_clean">
                                <TextView
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/optimize_result_size"
                                    android:textColor="@color/text_color"
                                    android:id="@+id/tv_jc_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8.0dip"
                                    android:text="@string/junk_clean_nav"
                                    android:textAllCaps="true" />
                                <TextView
                                    android:textSize="@dimen/text_details_optimize"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/grey_500"
                                    android:id="@+id/tv_jc_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8.0dip"
                                    android:text="@string/op_storage_des"
                                    android:layout_above="@+id/tv_jc_3"
                                    android:layout_below="@+id/tv_jc_1" />
                                <TextView
                                    android:textSize="@dimen/text_details_optimize"
                                    android:fontFamily="@font/roboto_regular"
                                    android:typeface="sans"
                                    android:textColor="@color/more_clean"
                                    android:gravity="center"
                                    android:id="@+id/tv_jc_3"
                                    android:background="@drawable/button_dialog_selector"
                                    android:paddingStart="8.0dip"
                                    android:paddingEnd="8.0dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="36.0dip"
                                    android:layout_marginBottom="8.0dip"
                                    android:minWidth="64.0dip"
                                    android:text="@string/op_clean"
                                    android:layout_gravity="end"
                                    android:textAllCaps="true" />
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvCool"
                        android:layout_width="fill_parent"
                        android:layout_height="120.0dip"
                        android:layout_marginStart="8.0dip"
                        android:layout_marginTop="8.0dip"
                        android:layout_marginBottom="8dip"
                        android:layout_marginEnd="8.0dip"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8.0dip"
                        app:cardElevation="0.0dip"
                        android:clickable="true">
                        <RelativeLayout
                            android:id="@+id/rlCool"
                            android:onClick="onClick"
                            android:background="@drawable/card_selector"
                            android:clickable="true"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <FrameLayout
                                android:id="@+id/fl_cool"
                                android:background="@drawable/more_share_bg"
                                android:layout_width="72.0dip"
                                android:layout_height="fill_parent">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:id="@+id/ivCool"
                                    android:layout_width="32.0dip"
                                    android:layout_height="32.0dip"
                                    android:src="@drawable/ic_temperature_normal"
                                    android:tint="@color/white" />
                            </FrameLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:paddingStart="16.0dip"
                                android:paddingEnd="8.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toEndOf="@+id/fl_cool">
                                <TextView
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/optimize_result_size"
                                    android:textColor="@color/text_color"
                                    android:id="@+id/tvCool1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8.0dip"
                                    android:text="@string/phone_cool_nav"
                                    android:textAllCaps="true" />
                                <TextView
                                    android:textSize="@dimen/text_details_optimize"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/grey_500"
                                    android:id="@+id/tvCool2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8.0dip"
                                    android:text="@string/op_cool_down_tip"
                                    android:layout_above="@+id/tvCool3"
                                    android:layout_below="@+id/tvCool1" />
                                <TextView
                                    android:textSize="@dimen/text_details_optimize"
                                    android:fontFamily="@font/roboto_regular"
                                    android:typeface="sans"
                                    android:textColor="@color/more_share"
                                    android:gravity="center"
                                    android:id="@+id/tvCool3"
                                    android:background="@drawable/button_dialog_selector"
                                    android:paddingStart="8.0dip"
                                    android:paddingEnd="8.0dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="36.0dip"
                                    android:layout_marginBottom="8.0dip"
                                    android:minWidth="64.0dip"
                                    android:text="@string/cool_down_button"
                                    android:layout_gravity="end"
                                    android:textAllCaps="true" />
                            </LinearLayout>
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </FrameLayout>




    <RelativeLayout
        android:id="@+id/rlScanning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center">


        <FrameLayout
            android:id="@+id/imgOutCircle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="@dimen/charge_buble"
                    android:layout_height="@dimen/charge_buble"
                    android:layout_centerInParent="true"
                    app:lottie_rawRes="@raw/ripple"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true" />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/loBattery"
                    android:layout_width="@dimen/charge_battery"
                    android:layout_height="@dimen/charge_battery"
                    android:layout_centerInParent="true"
                    app:lottie_rawRes="@raw/battery_blue"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />



            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgOutCircle"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:textSize="@dimen/Optimize_big_size"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvOptimize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:text="@string/pc_auto_optimizing"
                android:textAllCaps="true" />
            <TextView
                android:textSize="@dimen/text_details_optimize"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/text_value"
                android:gravity="center"
                android:id="@+id/tvScan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginEnd="16.0dip"
                android:maxLines="1"/>



        </LinearLayout>




    </RelativeLayout>






    <RelativeLayout

        android:id="@+id/rlDone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imgDone"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:lottie_rawRes="@raw/success_blue" />

        <TextView
            android:id="@+id/tvCooled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgDone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/done"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/tv_done_size"
            />

    </RelativeLayout>
</LinearLayout>
