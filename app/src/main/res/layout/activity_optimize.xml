<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded">

    <RelativeLayout
        android:id="@+id/rlScanning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imgCircle_size"
            android:layout_alignBottom="@+id/rlRound"
            android:layout_toEndOf="@+id/rlRound"
            android:gravity="center">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/phenomena_light"
                android:singleLine="true"
                android:text="@string/time_left"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/purple"
                android:textSize="@dimen/arc_title_time_left" />

            <TextView
                android:id="@+id/tvFullCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:fontFamily="@font/phenomena_regular"
                android:textColor="@color/text_color"
                android:textSize="18dip"
                android:textStyle="normal"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/view_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/phenomena_regular"
                    android:text="00"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_hour" />

                <TextView
                    android:id="@+id/tv_time_h_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="2.0dip"
                    android:fontFamily="@font/phenomena_regular"
                    android:text="h"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/arc_suffix_text_size" />

                <TextView
                    android:id="@+id/tvMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="2.0dip"
                    android:fontFamily="@font/phenomena_regular"
                    android:text="00"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_hour" />

                <TextView
                    android:id="@+id/tv_time_m_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="2.0dip"
                    android:fontFamily="@font/phenomena_regular"
                    android:text="m"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/arc_suffix_text_size" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_power_issue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFullCharge"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible">

                <View
                    android:id="@+id/vPowerIssue"
                    android:layout_width="@dimen/imgUsb_size"
                    android:layout_height="@dimen/imgUsb_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3.0dip" />

                <TextView
                    android:id="@+id/tv_power_issue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5.0dip"
                    android:layout_toRightOf="@+id/vPowerIssue"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/phenomena_regular"
                    android:textSize="@dimen/text_size" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnOptimize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_power_issue"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/phenomena_regular"
                android:gravity="center"
                android:paddingStart="@dimen/btn_size"
                android:paddingEnd="@dimen/btn_size"
                android:text="OPTIMIZE"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center">

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ripple_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                app:rb_color="@color/colorAccent"
                app:rb_duration="10000"
                app:rb_radius="92dip"
                app:rb_rippleAmount="2"
                app:rb_scale="3"
                app:rb_strokeWidth="0.8dip"
                app:rb_type="strokeRipple">

            </com.skyfishjy.library.RippleBackground>

            <me.itangqi.waveloadingview.WaveLoadingView
                android:id="@+id/waveLoadingView"
                android:layout_width="@dimen/imgCircle_size"
                android:layout_height="@dimen/imgCircle_size"
                android:layout_centerInParent="true"
                app:wlv_borderColor="#212123"
                app:wlv_borderWidth="4dp"
                app:wlv_progressValue="0"
                app:wlv_round_rectangle="true"
                app:wlv_shapeType="circle"
                app:wlv_titleCenterColor="@android:color/white"
                app:wlv_titleCenterSize="24sp"
                app:wlv_titleCenterStrokeColor="@color/white"
                app:wlv_titleCenterStrokeWidth="3dp"
                app:wlv_triangle_direction="north"
                app:wlv_waveAmplitude="70"
                app:wlv_waveColor="#212123"
                app:wlv_wave_background_Color="#212123" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvPercentPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/phenomena_regular"
                    android:singleLine="true"
                    android:text="20%"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/progress_percent2"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/phenomena_light"
                    android:singleLine="true"
                    android:text="@string/battery"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/arc_battery_title" />
                <ImageView
                    android:id="@+id/imgUsb"
                    android:layout_width="@dimen/imgUsb_size"
                    android:layout_height="@dimen/imgUsb_size"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_usb_white_48" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>