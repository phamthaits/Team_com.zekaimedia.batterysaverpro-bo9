<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_136sdp"
    android:background="@drawable/bg_rounded">

    <LinearLayout
        android:id="@+id/lrCool"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_icon_phone_cooler"
        android:clickable="true"
        android:onClick="onClick"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_16sdp">

        <RelativeLayout
            android:id="@+id/icon_cool"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/_16sdp"
            android:gravity="left">

            <ImageView
                android:id="@+id/ivCapacity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_noti_temp_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_cool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/icon_cool"
            android:layout_alignBottom="@+id/icon_cool"
            android:layout_toEndOf="@+id/icon_cool">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvCool"
                    style="@style/listContentHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_cool_nav" />

                <TextView
                    android:id="@+id/tvDescription"
                    style="@style/descriptionListContentHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tvCool"
                    android:text="@string/cool_description" />

                <TextView
                    android:id="@+id/tvFullCharge"
                    style="@style/listContentHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="@string/phone_cooler"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>