<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:gravity="center" 
    android:orientation="vertical" 
    android:id="@+id/root" 
    android:background="@color/black_alpha_70"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginStart="38.0dip"
        android:layout_marginEnd="38.0dip">
        <LinearLayout 
            android:orientation="horizontal"
            android:background="@drawable/usage_bg"
            android:padding="16.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                android:src="@mipmap/ic_launcher" />
            <TextView android:textSize="16.0sp"
                android:gravity="center"
                android:textColor="@color/white" 
                android:layout_width="wrap_content" 
                android:layout_height="fill_parent"
                android:fontFamily="@font/phenomena_regular"
                android:text="@string/app_name" />

        </LinearLayout>
        <LinearLayout 
            android:gravity="center_vertical" 
            android:orientation="horizontal" 
            android:background="@android:color/white" 
            android:layout_width="fill_parent" 
            android:layout_height="55.0dip">

            <TextView android:textSize="16.0sp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:paddingStart="10dp"
                android:textColor="#ff444444" 
                android:layout_gravity="center_vertical" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:text="@string/setting_permission_request_title"
                android:fontFamily="@font/phenomena_regular"
                android:layout_weight="1.0" />
            <FrameLayout 
                android:layout_width="100.0dip" 
                android:layout_height="fill_parent">
                <androidx.appcompat.widget.SwitchCompat
                    style="@style/swguide"
                    android:layout_gravity="center"
                    android:id="@+id/na_guide_switch_btn"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content" />
                <ImageView 
                    android:layout_gravity="center_vertical" 
                    android:id="@+id/na_guide_hand_img" 
                    android:padding="2.0dip" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginStart="10.0dip"
                    android:layout_marginTop="15.0dip" 
                    android:src="@drawable/pointing_hand" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:paddingBottom="10dp"
            android:layout_height="70dp">
            <TextView
                android:padding="10dp"
                android:textSize="14.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/phenomena_light"
                android:text="@string/setting_permission_request_summary" />
        </LinearLayout>


        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:id="@+id/na_guide_ok"
            android:background="@drawable/usage_button"
            android:layout_width="fill_parent"
            android:layout_height="36.0dip"
            android:layout_marginTop="16.0dip"
            android:fontFamily="@font/phenomena_regular"

            android:text="OK" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="fill_horizontal" />
</LinearLayout>