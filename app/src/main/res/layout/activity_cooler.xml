<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_battery_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:gravity="center|left">

        <LinearLayout
            android:id="@+id/lr_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:paddingEnd="8.0dip">

            <FrameLayout
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8.0dip"
                    android:src="@drawable/ic_navigate_before_white_48dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/activity_charge_tv_title_1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:fontFamily="@font/barlowcondensed_medium"
                android:gravity="center_vertical"
                android:text="@string/phone_cool_nav"
                android:textColor="@color/phone_cooler"
                android:textSize="@dimen/text_size_title" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lrScan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.skyfishjy.library.RippleBackground
            android:id="@+id/charge_boost_ripple_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:rb_color="#808BD1"
            app:rb_duration="1200"
            app:rb_radius="56.0dip"
            app:rb_rippleAmount="2"
            app:rb_scale="2.5">

            <FrameLayout
                android:id="@+id/fm_scan_container"
                android:layout_width="280.0dip"
                android:layout_height="280.0dip"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="44.0dip">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/ivDoneHoloCirular"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:alpha="0.6"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/clean_done_iv_done"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_bg_done"
                        android:padding="50dp"
                        android:src="@drawable/ic_complete_tick"
                        android:visibility="gone" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivScan"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_fan" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_fan_white"
                        app:tint="#808BD1" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:weightSum="2.0">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="96.0dip"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                        <FrameLayout
                            android:id="@+id/fm_scan_container_1"
                            android:layout_width="96.0dip"
                            android:layout_height="fill_parent" />

                        <FrameLayout
                            android:id="@+id/fm_scan_container_2"
                            android:layout_width="96.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="96.0dip"
                        android:orientation="horizontal"
                        android:weightSum="2.0">

                        <FrameLayout
                            android:id="@+id/fm_scan_container_4"
                            android:layout_width="96.0dip"
                            android:layout_height="fill_parent" />

                        <FrameLayout
                            android:id="@+id/fm_scan_container_3"
                            android:layout_width="96.0dip"
                            android:layout_height="fill_parent" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </com.skyfishjy.library.RippleBackground>

        <TextView
            android:id="@+id/clean_up_done_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            android:fontFamily="@font/barlowcondensed_regular"
            android:gravity="center"
            android:text="@string/cool_down_button"
            android:textAllCaps="true"
            android:textColor="@color/text_activity"
            android:textSize="@dimen/Optimize_big_size"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bg_snow"
        android:layout_width="320.0dip"
        android:layout_height="1138.0dip"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bg_snow"
        android:translationY="-1138.0dip" />

    <FrameLayout
        android:id="@+id/fmResult"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?actionBarSize"
        android:animateLayoutChanges="true"
        android:background="@color/windowBackground"
        android:visibility="gone">
        <!-- android:visibility="gone" -> Cooled-->

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/screen_padding_5">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_38sdp"
                    android:paddingRight="@dimen/_38sdp"
                    android:paddingBottom="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tv_optimized_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:layout_toStartOf="@+id/img_done"
                        android:fontFamily="@font/barlowcondensed_medium"
                        android:text="@string/result_cooler"
                        android:textAllCaps="true"
                        android:textColor="@color/temperature"
                        android:textSize="@dimen/text_size_title" />

                    <ImageView
                        android:id="@+id/img_done"
                        android:layout_width="@dimen/img_mark_size"
                        android:layout_height="@dimen/img_mark_size"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/screen_padding_5"
                        android:padding="5dp"
                        android:src="@drawable/ic_temperature" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="@dimen/img_mark_size"
                        android:layout_height="@dimen/img_mark_size"
                        android:layout_alignParentRight="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/confetti_blast" />

                    <ImageView
                        android:id="@+id/iv_bg_result"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/img_mark_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/bg_snow_result" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.0dip"
                        android:layout_below="@+id/tv_optimized_info" />
                </RelativeLayout>

                <include
                    android:id="@+id/native_ads_control_holder"
                    layout="@layout/control_native_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginRight="@dimen/screen_padding_5" />

                <!--Trash Cleaner-->
                <include
                    android:id="@+id/cv_trash_cleaner"
                    layout="@layout/trash_cleaner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--Phone Boost-->
                <include
                    layout="@layout/phone_boost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--Charge History-->
                <include
                    layout="@layout/charge_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--App Manager-->
                <include
                    layout="@layout/app_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--Settings-->
                <include
                    layout="@layout/settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--Remove Ads-->
                <include
                    android:id="@+id/remove_ads"
                    layout="@layout/remove_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</FrameLayout>