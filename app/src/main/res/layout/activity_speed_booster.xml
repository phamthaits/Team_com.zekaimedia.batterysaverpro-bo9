<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_battery_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:gravity="center|left">

        <LinearLayout
            android:id="@+id/lr_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:paddingEnd="8.0dip">

            <FrameLayout
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8.0dip"
                    android:src="@drawable/ic_navigate_before_white_48dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/activity_charge_tv_title_1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:fontFamily="@font/barlowcondensed_medium"
                android:gravity="center_vertical"
                android:text="@string/ram_boost_title"
                android:textColor="@color/phone_boost"
                android:textSize="@dimen/text_size_title" />

        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fmResult"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animateLayoutChanges="true"
        android:visibility="gone">
        <!-- android:visibility="gone" -> Cleaned -->
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/screen_padding_5">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_38sdp"
                    android:paddingRight="@dimen/_38sdp"
                    android:paddingBottom="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tv_optimized_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_35sdp"
                        android:fontFamily="@font/barlowcondensed_medium"
                        android:text="@string/ram_result"
                        android:textAllCaps="true"
                        android:textColor="@color/temperature"
                        android:textSize="@dimen/text_size_title" />
                    <!--                     <com.airbnb.lottie.LottieAnimationView
                                             android:id="@+id/img_done"
                                             android:layout_width="@dimen/img_mark_size"
                                             android:layout_height="@dimen/img_mark_size"
                                             android:layout_centerHorizontal="true"
                                             app:lottie_autoPlay="true"
                                             app:lottie_loop="true"
                                             app:lottie_rawRes="@raw/boost" />-->
                    <ImageView
                        android:id="@+id/img_done"
                        android:layout_width="@dimen/img_mark_size"
                        android:layout_height="@dimen/img_mark_size"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_memory_boost" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="@dimen/img_mark_size"
                        android:layout_height="@dimen/img_mark_size"
                        android:layout_alignParentRight="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/confetti_blast" />
                </RelativeLayout>


                <!--<View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">-->

                <include
                    android:id="@+id/native_ads_control_holder"
                    layout="@layout/control_native_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginRight="@dimen/screen_padding_5" />

                <!--Trash Cleaner-->
                <include
                    android:id="@+id/cv_trash_cleaner"
                    layout="@layout/trash_cleaner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--Phone Cooler-->
                <include
                    layout="@layout/phone_cooler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--Charge History-->
                <include
                    layout="@layout/charge_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--App Manager-->
                <include
                    layout="@layout/app_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--Settings-->
                <include
                    layout="@layout/settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

                <!--Remove Ads-->
                <include
                    android:id="@+id/remove_ads"
                    layout="@layout/remove_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/screen_padding_5"
                    android:layout_marginTop="@dimen/screen_padding_5"
                    android:layout_marginEnd="@dimen/screen_padding_5"
                    android:paddingTop="@dimen/margin_between_progress"
                    android:paddingBottom="@dimen/margin_between_progress" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!--Scanning Boost-->
    <RelativeLayout
        android:id="@+id/rlScanning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center">


        <FrameLayout
            android:id="@+id/imgOutCircle"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <app.tahachi.batterydoctor.view.HoloCircularProgressBar
                    android:id="@+id/ivDoneHoloCirular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    app:holo_progress="0"
                    app:marker_progress="0"
                    app:marker_visible="false"
                    app:progress_background_color="@color/progress_bg"
                    app:progress_color="@color/progress_color"
                    app:stroke_width="4dp" />

                <ImageView
                    android:id="@+id/img_rotate_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/ic_icon_progress_charge"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/clean_done_iv_rocket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_38sdp"
                    android:src="@drawable/ic_memory_boost"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/clean_done_iv_tick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/complete_bg_boost"
                    android:padding="50dp"
                    android:src="@drawable/ic_complete_tick"
                    android:visibility="invisible" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgOutCircle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOptimize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20.0dip"
                android:fontFamily="@font/barlowcondensed_regular"
                android:text="@string/boosting"
                android:textAllCaps="true"
                android:textColor="@color/text_activity"
                android:textSize="@dimen/Optimize_big_size" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
