<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:theme="@style/ToolbarThemeGreen"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:subtitleTextColor="@color/colorPrimaryDark"
            app:titleTextAppearance="@style/textsizetoolbar"
            app:titleTextColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lr4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_rounded"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/rlDND"
            style="@style/Ripple"
            android:paddingVertical="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEnable"
                    style="@style/rowAlonetvt"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:text="@string/enabled" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swDND"
                style="@style/swStyle"
                app:track="@drawable/track" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_DND_start"
            style="@style/Ripple"
            android:paddingVertical="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_DND_start"
                    style="@style/rowAlonetvt"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:text="@string/start_at" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_DND_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="22:00"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_DND_stop"
            style="@style/Ripple"
            android:paddingVertical="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_DND_stop"
                    style="@style/rowAlonetvt"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:text="@string/stop_at" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_DND_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="08:00"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>