<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffefefef"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:titleTextColor="@color/text_color"
            app:subtitleTextColor="@color/text_color"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            app:layout_collapseMode="pin"
            android:fontFamily="@font/roboto_regular"
            android:theme="@style/ToolbarThemeGreen"
            android:background="@color/white"
            app:titleTextAppearance="@style/textsizetoolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lr4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/screen_padding_5"
        android:layout_marginStart="@dimen/screen_padding_5"
        android:layout_marginEnd="@dimen/screen_padding_5"
        android:layout_marginTop="@dimen/screen_padding_5"
        android:background="@drawable/bg_rounded"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/rlDND"
            style="@style/Ripple"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEnable"
                    style="@style/rowAlonetvt"
                    android:text="@string/enabled" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swDND"
                style="@style/swStyle"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_DND_start"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            style="@style/Ripple"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_DND_start"
                    style="@style/rowAlonetvt"
                    android:text="@string/start_at" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_DND_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:text="22:00"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/text_details" />
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:id="@+id/rl_DND_stop"
            style="@style/Ripple"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_DND_stop"
                    style="@style/rowAlonetvt"
                    android:text="@string/stop_at" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_DND_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:text="08:00"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/text_details" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>