<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded">

    <RelativeLayout
        android:id="@+id/lrManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_icon_app_manager"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick">

        <RelativeLayout
            android:id="@+id/icon_manager"
            android:layout_width="@dimen/_78sdp"
            android:layout_height="@dimen/_78sdp"

            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivManager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/imageListContentHome"
                android:src="@drawable/ic_app_manager" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text_manager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/icon_manager"
            android:layout_alignBottom="@+id/icon_manager"
            android:layout_toEndOf="@+id/icon_manager">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvManager"
                    style="@style/listContentHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/title_app_manager" />

                <TextView
                    android:id="@+id/tvDescription"
                    style="@style/descriptionListContentHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tvManager"
                    android:text="@string/manager_description" />

                <TextView
                    android:id="@+id/tvFullCharge"
                    style="@style/listContentHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="@string/manage" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>