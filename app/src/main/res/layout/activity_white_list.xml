<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
            android:theme="@style/ToolbarThemeGreen"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:subtitleTextColor="@color/colorPrimaryDark"
            app:titleTextAppearance="@style/textsizetoolbar"
            app:titleTextColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvNoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/no_item"
            android:textColor="@color/title_dark"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/recyclerViewWhiteList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="@dimen/_5sdp" />

        <include layout="@layout/loading" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnAddWhiteList"
        style="@style/buttonSettingAds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_marginVertical="10dip"
        android:text="@string/white_list_add"
        android:textStyle="bold" />
</LinearLayout>